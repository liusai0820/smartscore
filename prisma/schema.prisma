// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id         String   @id @default(uuid())
  name       String
  role       String   // "LEADER" or "DEPT_HEAD"
  department String
  passcode   String
  isActive   Boolean  @default(true) // 是否启用（用于临时禁用评审员）
  scores     Score[]
  createdAt  DateTime @default(now())
}

model Project {
  id          String   @id @default(uuid())
  name        String
  department  String
  presenter   String
  description String?
  scores      Score[]
  createdAt   DateTime @default(now())
}

model Score {
  id            String   @id @default(uuid())
  // DIKI范式 - 6维度评分
  dataScore     Int      // Data（数据质量）- 数据结构与获取难度 (20%)
  infoScore     Int      // Information（信息处理）- 结果支撑力与可视化 (15%)
  knowScore     Int      // Knowledge（知识构建）- 多维分析与理论价值 (15%)
  insightScore  Int      // Insight（洞察智慧）- 问题发现与对策创新 (20%)
  approvalScore Int      // Approval（决策影响力）- 领导批示与成果转化 (15%)
  awardScore    Int      // Award（所获荣誉）- 奖项 (15%)
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  project       Project  @relation(fields: [projectId], references: [id])
  projectId     String
  createdAt     DateTime @default(now())

  @@unique([userId, projectId])
}

model Config {
  key   String @id
  value String
}
