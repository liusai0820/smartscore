// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id         String   @id @default(uuid())
  name       String
  role       String   // "LEADER" or "DEPT_HEAD"
  department String
  passcode   String
  isActive   Boolean  @default(true) // 是否启用（用于临时禁用评审员）
  scores     Score[]
  createdAt  DateTime @default(now())
}

model Project {
  id          String   @id @default(uuid())
  name        String
  department  String
  presenter   String
  description String?
  scores      Score[]
  createdAt   DateTime @default(now())
}

model Score {
  id          String   @id @default(uuid())
  // 4维度评分 (1-10分)
  valueScore  Int      // 研究价值 (30%)
  innovScore  Int      // 创新性 (25%)
  feasiScore  Int      // 可行性 (25%)
  outputScore Int      // 预期成果 (20%)
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String
  createdAt   DateTime @default(now())

  @@unique([userId, projectId])
}

model Config {
  key   String @id
  value String
}
